<div class="container">
  <div class="panel panel-default">
  	<div class="panel-body">Log In</div>  
	  	<form class="form-horizontal">
			<div class="form-group">
				<label class="control-label col-sm-2" for="email">Email:</label>
				<div class="col-sm-10">
				    {{input type="email" class="form-control" id="email" value=email value="123@qq.com" placeholder="Enter email"}}
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="pwd">Password:</label>
				<div class="col-sm-10"> 
			  		{{input type="password" class="form-control" id="pwd" value=password value="123" placeholder="Enter password"}}
				</div>
			</div>
			<div class="form-group"> 
				<div class="col-sm-offset-2 col-sm-10">
				    <div class="checkbox">
				        <label><input type="checkbox"> Remember me</label>
				    </div>
				</div>
			</div>
			<div class="form-group"> 
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default" {{action 'login'}}>Login</button>
				</div>
			</div>
		</form>
	</div>

</div>
