<div class="container">
  <div class="panel panel-default">
  	<div class="panel-body" align="center"><font size="16px">Sign Up</font></div>  
  		<div align="center">
  			{{#if errorMessage}}
  			<font color="red">{{errorMessage}}</font>
			{{/if}}
  		</div>
	  	<form class="form-horizontal" {{action "submit" on="submit"}}>
			<div class="form-group">
				<label class="control-label col-sm-2" for="email">Email:</label>
				<div class="col-sm-8">
				    {{input type="email" class="form-control" id="email" value=user.email placeholder="Enter email"}}
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="pwd">Password:</label>
				<div class="col-sm-8"> 
			  		{{input type="password" class="form-control" id="pwd" value=user.password placeholder="Enter password"}}
				</div>
			</div>
			<div class="form-group"> 
				<div class="col-sm-offset-5 col-sm-2">
					<button type="submit" class="btn btn-default">Sign Up</button>
				</div>
			</div>
		</form>
	</div>
</div>
