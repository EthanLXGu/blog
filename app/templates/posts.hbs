<div class="row">
    <div class="col-md-4 col-xs-4">
        <ul class="list-group">
        {{#each model as |post|}}
            <li class="list-group-item">
                <!--设置路由，路由的层级与router.js里定义的要一致，model的id属性作为参数 -->
                 {{#link-to 'posts.post' post.id}}
                    {{post.information}}
                {{/link-to}}
            </li>
        {{/each}}
        </ul>
    </div>

    <div class="col-md-8 col-xs-8">
    {{outlet}}
    </div>
</div>